{
  "name": "filmshelf",
  "version": "1.0.0",
  "description": "a service for managing your movie collection",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "start": "node dist/index.js",
    "test": "nyc mocha --reporter spec --require ts-node/register 'test/**/*.test.ts'",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "tslint src/**/*.ts",
    "build": "tsc",
    "serve": "ts-node src/index.ts",
    "docker-dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker-test": "docker-compose -f docker-compose.test.yml up",
    "docker": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --build"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mimsy/filmshelf.git"
  },
  "author": "James Dewar",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/mimsy/filmshelf/issues"
  },
  "homepage": "https://github.com/mimsy/filmshelf#readme",
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "chai-http": "^4.3.0",
    "config": "^3.2.4",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-pino-logger": "^4.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.7.10",
    "pino": "^5.13.6",
    "request": "^2.88.0",
    "request-promise": "^4.2.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.5",
    "@types/chai-http": "^4.2.0",
    "@types/config": "0.0.36",
    "@types/dirty-chai": "^2.0.2",
    "@types/express": "^4.17.2",
    "@types/express-pino-logger": "^4.0.2",
    "@types/hapi__joi": "^16.0.3",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.30",
    "@types/pino": "^5.8.13",
    "@types/request": "^2.48.3",
    "@types/request-promise": "^4.1.44",
    "chai": "^4.2.0",
    "coveralls": "^3.0.7",
    "dirty-chai": "^2.0.1",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "nyc": "^14.1.1",
    "ts-lint": "^4.5.1",
    "ts-node": "^8.5.0",
    "typescript": "^3.7.2"
  }
}
